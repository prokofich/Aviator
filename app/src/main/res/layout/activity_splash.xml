<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_splash_img"/>

    <ImageView
        android:id="@+id/id_splash_iv_air"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/id_splash_tv_title_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Aviator"
        android:fontFamily="@font/yellowtail"
        android:textSize="90sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_splash_iv_air"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.15"/>

    <ProgressBar
        android:id="@+id/id_splash_progressBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleY="0.5"
        android:backgroundTint="@color/white"
        android:progressTint="@color/white"
        android:layout_marginBottom="50dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@id/id_splash_tv_title_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>